{
    "manifest_version": 2,
    "name": "Idleon-Api-Downloader",
    "version": "0.1",
    
    "browser_action": {
        "default_popup": "index.html"
      },
    
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
      ],

    "content_scripts": [
        {
            "matches": ["*://*.legendsofidleon.com/*"],
            "js": ["inject.js"],
            "run_at": "document_start"
        }
    ],

    "web_accessible_resources": ["injected.js"]

}
